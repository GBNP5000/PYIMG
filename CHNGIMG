import cv2

print ("Read image with opencv")
img = cv2.imread("D:/PYTHONS/IMAGE/T1.png")

print ("Convert to gray")
img = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

print ("Write gray image")
cv2.imwrite("D:/PYTHONS/IMAGE/Gray.png", img)

print ("------ Done -------")


